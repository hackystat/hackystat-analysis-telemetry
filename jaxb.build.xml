<project name="jaxb" default="jaxb">
  <description>
  Supports JAXB binding process (creation of Java classes from the XmlSchema documents.)
  </description>

  <import file="build.xml"/>
  <property environment="env"/>
    
  <taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
    <classpath>
      <fileset dir="${env.JAXB_HOME}/lib" includes="*.jar" />
    </classpath>
  </taskdef>   

  <target name="jaxb" description="Runs the XJC compiler.">
    <xjc schema="${basedir}/xml/schema/telemetry.xsd" destdir="src" package="org.hackystat.telemetry.service.resource.chart.jaxb"/>
    <xjc schema="${basedir}/xml/schema/reducer.xsd" destdir="src" package="org.hackystat.telemetry.analyzer.reducer.jaxb"/>
  </target>
</project>
